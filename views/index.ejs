<html>
<head>
  <link rel="stylesheet" href="css/dashboard.css">
  <link rel="stylesheet" href="css/master.css">
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/vis/4.5.0/vis.min.css">
  <script src="https://unpkg.com/vue/dist/vue.js"></script>
  <script src="<%=snsApiUrl%>/client.js"></script>
</head>
<body class="capped-layout">

<header class="capped-layout_cap app-banner">
  <a class="app-banner_title" rel="home" href="https://developer.ibm.com/clouddataservices">Watson Recipe Bot Dashboard</a>
</header>

<div id="app">
  <div class="capped-layout_body bookend-layout">
    <nav class="bookend-layout_bookend theme_light bg_white">
      <ul class="tree-nav">
        <li class="tree-nav_item">
          <a class="tree-nav_link top-nav">Users</a>
          <ul class="tree-nav">
            <li class="tree-nav_item" v-for="user in users">
              <a class="tree-nav_link" href v-on:click.prevent="switchUser(user)">{{ user.name }}</a>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
    <nav class="bookend-layout_bookend theme_light bg_light">
      <ul class="tree-nav">
        <li class="tree-nav_item">
          <a class="tree-nav_link top-nav">Actions</a>
          <ul class="tree-nav">
            <li class="tree-nav_item" v-for="notification in activeUser.notifications">
              <a class="tree-nav_link" href v-on:click.prevent="setActiveState(notification.state)">{{ notification.message }}</a>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
    <div class="bookend-layout_body theme_dark scrollable-y">
      <div id="graph" style="width: 600px; height: 600px"></div>
    </div>
  </div>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/vis/4.5.0/vis.min.js"></script>
<script src="//cdn.jsdelivr.net/vue.resource/1.0.3/vue-resource.min.js"></script>
<script src="js/app.js"></script>
<script>
    app.snsApiUrl = '<%=snsApiUrl%>';
</script>

</body>
</html>